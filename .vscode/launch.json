{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RUN",
      "type": "debugpy",
      "request": "launch",
      "cwd": "/hzztai",
      "env": {
        "PYTHONPATH": "/hzztai/slimai:$PYTHONPATH",
        "CUDA_VISIBLE_DEVICES": "7",
        "PYDEVD_WARN_SLOW_RESOLVE": "0", 
        "CUDA_LAUNCH_BLOCKING": "1"
      },
      "program": "/hzztai/slimai/tools/run.py",
      "console": "integratedTerminal",
      "args": [
        "--config=/hzztai/slimai/_debug_/debug.py",
        "--work-dir=/hzztai/experiments/debug",
        "--action=train",
      ],
      "justMyCode": false
    },
    {
      "name": "TORCHRUN",
      "type": "debugpy",
      "request": "launch",
      "cwd": "/hzztai",
      "env": {
        "PYTHONPATH": "/hzztai/slimai:$PYTHONPATH",
        "CUDA_VISIBLE_DEVICES": "7,6,5,4,3,2,1,0",
        "PYDEVD_WARN_SLOW_RESOLVE": "0",
        "CUDA_LAUNCH_BLOCKING": "1"
      },
      "module": "torch.distributed.launch",
      "console": "integratedTerminal",
      "args": [
        "--nproc_per_node=8",
        "--standalone",
        "/hzztai/slimai/tools/run.py",
        "--config=/hzztai/slimai/_debug_/debug.py",
        "--work-dir=/hzztai/experiments/debug",
        "--action=train", "--ddp=ddp"
      ],
      "justMyCode": false
    },
    {
      "name": "EXPORT",
      "type": "debugpy",
      "request": "launch",
      "program": "/hzztai/slimai/tools/export.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "/hzztai/slimai:$PYTHONPATH",
        "CUDA_VISIBLE_DEVICES": "7",
        "CUDA_LAUNCH_BLOCKING": "1"
      },
      "args": [
        "--ckpt_path=/hzztai/experiments/debug/20250219-55229a14/ckpts/best.pth",
        "--output_dir=/hzztai/experiments/debug/20250219-55229a14/exps",
        "--format=onnx"
      ]
    },
    {
      "name": "ALIGN",
      "type": "debugpy",
      "request": "launch",
      "cwd": "/hzztai/projects/tct/flu_app/jupyter",
      "program": "wsi_align.py",
      "console": "integratedTerminal",
      "justMyCode": false
    }, 
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "console": "integratedTerminal", 
      "justMyCode": false
    }
  ]
}